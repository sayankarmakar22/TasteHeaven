<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_5"
            app:civ_border_color="#E65100"/>

        <TextView
            android:id="@+id/restauName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:text="Taste Heaven"
            android:textColor="#7C4DFF"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/img"
            app:civ_border_color="#E65100"
            app:civ_border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good Morning, "
            android:textSize="22dp"
            android:textFontWeight="@integer/material_motion_duration_long_2"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sayan Karmakar"
            android:textSize="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:startIconDrawable="@drawable/baseline_search_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search your item...."
                android:background="@drawable/search_item_layout"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#FFD600"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:layout_marginLeft="8.5dp"
                android:layout_marginTop="5dp"
                android:textSize="17.5dp"
                android:textColor="#931414"/>

            <ImageView
                android:id="@+id/breakfastImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/img_1" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#23CEE8"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:layout_marginLeft="8.5dp"
                android:layout_marginTop="5dp"
                android:textSize="17.5dp"
                android:textColor="#931414"/>

            <ImageView
                android:id="@+id/lunchImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/img_2" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#AEEA00"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:layout_marginLeft="8.5dp"
                android:layout_marginTop="5dp"
                android:textSize="17.5dp"
                android:textColor="#931414"/>

            <ImageView
                android:id="@+id/dinnerImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/img_3" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/populerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Populer"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="275dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#D4E69D"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/biriyani"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Biriyani"
                android:textColor="#F80F0F"
                android:textSize="20dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : 330"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/biriyaniImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="top"
                android:src="@drawable/biriyani" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="275dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#8FCAD3"
            app:cardCornerRadius="15dp"
            android:outlineAmbientShadowColor="@color/black">

            <ImageView
                android:id="@+id/cripsyChickenImage"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/img_4" />

            <TextView
                android:id="@+id/thali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Biriyani"
                android:textColor="#F80F0F"
                android:textSize="20dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/thaliPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price : 330"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/thaliAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Explore more"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#FF8A80"/>


</LinearLayout>